!!!XML
!!!STRICT
%html
  %head
    %title= about :title
    %script{ :src => js_path("jquery.tools.min") }
    %script{ :src => js_path("jquery.centreinwindow") }
    %link{ :href => css_path("default"), :rel => "stylesheet", :type => "text/css" }/
    %style{ :type => 'text/css' }
      = styles

    -# required stylesheet images
    - assets = ['img/default-bg.jpg'] # add more if necessary
    - assets.each { |asset| copy_asset asset }
  %body
    :javascript
      $(function() {
      	$(".slides").scrollable({ circular: false }).centreInWindow();
      });
    .slides
      / wrapper for scrollable items
      .items
        = slides
